<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
</head>
<body>
<%= render 'layouts/header' %>
<div class="container">
  <%	flash.each	do	|message_type,	message|	%>
      <div	class="alert	alert-<%=	message_type	%>"><%=	message	%></div>
  <%	end	%>
  <section class="round">
    <%= yield %>
  </section>
  <%= render 'layouts/footer' %>
  <%=	debug(params)	if	Rails.env.development?	%>
</div>

</body>
</html>
